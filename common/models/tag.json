{
  "name": "Tag",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "tag": {
      "type": "string",
      "required": true,
      "index": {
        "unique": true
      }
    },
    "slug": {
      "type": "string"
    },
    "url": {
      "type": "string",
      "required": true,
      "default": "/market"
    }
  },
  "validations": [],
  "relations": {
    "products": {
      "type": "hasMany",
      "model": "Product",
      "foreignKey": "tagId",
      "through": "ProductTag"
    }
  },
  "acls": [],
  "methods": {}
}
