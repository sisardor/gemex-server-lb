{
  "name": "Product",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "string"
    },
    "price": {
      "type": "number"
    },
    "images": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "orders": {
      "type": "hasMany",
      "model": "Order",
      "foreignKey": "productId",
      "through": "OrderDetail"
    },
    "category": {
      "type": "belongsTo",
      "model": "Category",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "patchAttributes"
    }
  ],
  "methods": {},
  "mixins": {
    "MethodWhitelist": {
      "expose": [
        "findById",
        "create",
        "patchAttributes",
        "find",
        "__findById__orders",
        "__get__orders",
        "__get__category"
      ]
    }
  }
}
